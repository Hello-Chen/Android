<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ImageViewActivity">

    <ImageButton
        android:id="@+id/hav"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginStart="150dp"
        android:background="@drawable/hav" />

    <ImageButton
        android:id="@+id/haz"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/haz"
        android:layout_toRightOf="@+id/hav"/>

    <ImageButton
        android:id="@+id/haw"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/haw"
        android:layout_toRightOf="@+id/haz"/>

    <ImageButton
        android:id="@+id/hay"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/hay"
        android:layout_toRightOf="@+id/haw"/>

    <ImageButton
        android:id="@+id/hax"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/hax"
        android:layout_toRightOf="@+id/hay"/>
</RelativeLayout>